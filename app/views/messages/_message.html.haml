.message-box
  .message-name-date
    .message-name 
      = message.user.name
    .message-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message
    - if message.content.present?
      %p.lower-message__content
      = message.content
      = image_tag  message.image class: 'message' if message.image.present?
